<div class="container">
	<h3>Profile Details</h3>

	<p>Full Name: <%= @profile.fullName %> </p>
	<p>Date of Birth: <%= @profile.DOB %> </p>
	<p>Address: <%= @profile.address %> </p>
	<p>City: <%= @profile.city %> </p>
	<p>Country: <%= @profile.country %> </p>
	<p>User Photo: <%= image_tag(@profile.userPhoto.url, height:"90", width:"80") %> </p>

	<%= link_to 'Reset Your Password', edit_user_path(session[:user_id])%>

	<p>Own Reviews:</p>
	<div class="container">
		<h2>All Reviews</h2>

		<table border="1" class="table">
			<tr>
				<th> Author </th>
				<th> Product Rating </th>
				<th> Review </th>
				<th> Edit </th>
				<th> Delete </th>
			</tr>
			<% @ownReviews.each do |review| %>
			<tr>
				<td> <%= review.author %> </td>
				<td> <%= review.productRating %> </td>
				<td> <%= review.reviewContent %> </td>
				<td> <%= link_to 'Edit', edit_review_path(review) %> </td>
				<td> <%= link_to 'Delete', review_path(review), method: :Delete, data:{confirm: "Are you sure you want to delete this review?"} %> </td>
			</tr>
			<% end %>
		</table>
	</div>

</div>