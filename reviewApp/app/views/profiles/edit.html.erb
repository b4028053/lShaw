<div class="container">
	<h2>Edit Profile</h2>

	<%= form_for @profile do |f| %>

	<div class="form-group">
			<%= f.label :fullName %><br />
			<%= f.text_field :fullName, class:'form-control' %>
		</div>

		<div class="form-group">
			<%= f.label :DOB %><br />
			<%= f.text_field :DOB, class:'form-control' %>
		</div>

		<div class="form-group">
			<%= f.label :address %><br />
			<%= f.text_field :address, class:'form-control' %>
		</div>

		<div class="form-group">
			<%= f.label :city %><br />
			<%= f.text_field :city, class:'form-control' %>
		</div>

		<div class="form-group">
			<%= f.label :country %><br />
			<%= f.text_field :country, class:'form-control' %>
		</div>

		<div class="form-group">
			<%= f.label :userPhoto %><br />
			<%= f.text_field :userPhoto, class:'form-control' %>
		</div>

		<%= f.submit "Submit", class:'btn btn-primary' %>
		<%= link_to "Cancel", profiles_path, class:'bt btn-default' %>
	<% end %>
</div>