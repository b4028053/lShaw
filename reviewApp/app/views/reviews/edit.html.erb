<div class="container">
	<h2>Add Review</h2>

	<%= form_for :review, url: reviews_path do |f| %>
		<div class="form-group">
			<%= f.label :author %><br />
			<%= f.text_field :author, class:'form-control' %>
			<!--:disabled => true, value: session[:username]-->
		</div>

		<div class="form-group">
			<%= f.label :productID %><br />
			<%= f.text_field :productID, class:'form-control' %>
			
		</div>

		<div class="form-group">
			<%= f.label :productRating %><br />
			<%= f.number_field :productRating, class:'form-control', min: 1, max: 10 %>
		</div>

		<div class="form-group">
			<%= f.label :reviewContent %><br />
			<%= f.text_area :reviewContent, class:'form-control', style:"height:135"%>
		</div>

		<div class="form-group">
			<%= f.label :reviewDate %><br />
			<%= f.text_field :reviewDate, class:'form-control' %>
			<!--, :value=>Date.today.strftime("%d/%m/%Y")  -->
		</div>

		<%= f.submit "Submit", class:'btn btn-primary' %>

	<% end %>
</div>