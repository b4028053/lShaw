<div class="container">
	<h2>All Reviews</h2>

	<table border="1" class="table">
		<tr>
			<th> Author </th>
			<th> Product Rating </th>
			<th> Review </th>
			<th> Edit </th>
		</tr>
		<% @reviews.each do |review| %>
		<tr>
			<td> <%= review.author %> </td>
			<td> <%= review.productRating %> </td>
			<td> <%= review.reviewContent %> </td>
			<td> <%= link_to 'Edit', edit_review_path(review) %> </td>
		</tr>
		<% end %>
	</table>
</div>