<div class="container">
	<h3>Product Details</h3>

	<p>Name: <%= @product.name %> </p>
	<p>Brand: <%= @product.brand %> </p>
	<p>Average Cost: <%= @product.avgCost %> </p>
	<p>Category: <%= @product.category %> </p>
	<p>Released Date: <%= @product.releaseDate %> </p>
	<p>Description: <%= @product.description %> </p>
	<!--<p>Product Photo: <%= @product.productPhoto %> </p>-->
	<p>Product Photo: <%= image_tag(@product.productPhoto.url, height:"90", width:"80") %> </p>

	<%= link_to "Add Review", new_review_path({name: @product.name, id: @product.id }) %>
	
	<table border="1" class="table">
		<tr>
			<th style="width:100px;"> Author Photo</th>
			<th style="width:200px;"> Author </th>
			<th style="width:100px;"> Product Rating </th>
			<th> Review </th>
			<th> Options </th>
		</tr>

	<% @profilePhoto.each do |review| %>
		<tr>
			<td> <%= image_tag(review.profile.userPhoto.url, height:"90", width:"130") %></td>
			<td><%= review.author %></td>
			<td><%= review.productRating %></td>
			<td><%= review.reviewContent %></td>
			<td> 
				<% if review.profile_id == session[:profile_id] %>
				<%= link_to 'Edit', edit_review_path(review.id) %> <br/> <%= link_to 'Delete', review_path(review.id), method: :Delete, data:{confirm: "Are you sure you want to delete this review?"} %>
				<% end %>
			</td>
		</tr>
	<% end %>
	</table>

	
</div>